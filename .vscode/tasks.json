    },
    {
      "label": "iOS: Launch Simulator App",
      "type": "shell",
      "command": "xcrun simctl boot 'iPhone 15' || true && open -a Simulator",
      "problemMatcher": []
    },
    {
      "label": "Environment: Validate iOS toolchain",
      "type": "shell",
      "command": "bash scripts/validate_ios_env.sh",
      "problemMatcher": []
    }
  ]
